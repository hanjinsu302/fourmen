    <style>
        :root {
        --swiper-navigation-size: 30px;
      }
      .swiper {
        min-width: 1000px;
        height: 50px;
        margin-top: 20px;
      }
      .swiper-wrapper {
        height: 100%;
        position: relative;
        z-index: 1;
      }
      .swiper-slide {
        width: 200px;
        height: 100%;
        margin : 8px;
        text-align: center;
        overflow:visible;
        position: relative;
        bottom: 7px;
      }
      .swiper-button-prev,
      .swiper-button-next {
        color: black;
        opacity: 0.2;
        
      }
      .swiper-wrapper .swiper-slide img {
        min-width: 40px;
        height: 40px;
        z-index: 10;
      }
      .swiper-wrapper img:hover {
        transform: scale(1.2);
      }
      .swiper-scrollbar {
        opacity: 0.5;
      }

    </style>
  </head>
